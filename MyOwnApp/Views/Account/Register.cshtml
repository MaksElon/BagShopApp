@model MyOwnApp.ViewModels.RegisterViewModel

    <form class="sign-up-htm" method="post" asp-action="Register" asp-controller="Account">
        <div class="group">
            <label for="email" class="label">Email Address</label>
            <input id="email" onblur="email_validate(this.value)" asp-for="Email" name="email" type="text" class="input">
            <div id="messageE"></div>
        </div>
        <div class="group">
            <label for="phone" class="label">Phone</label>
            <input onblur="phone_validate(this.value)" id="phone" asp-for="Phone" name="phone" type="text" class="input">
            <div id="messagePh"></div>
        </div>
        <div class="group">
            <label for="firstName" class="label">First name</label>
            <input id="firstName" onblur="FN_validate(this.value)" asp-for="FirstName" name="firstName" type="text" class="input">
            <div id="messageFN"></div>
        </div>
        <div class="group">
            <label for="lastName" class="label">Last name</label>
            <input id="lastName" onblur="LN_validate(this.value)" asp-for="LastName" name="lastName" type="text" class="input">
            <div id="messageLN"></div>
        </div>
        <div class="group">
            <label for="password" class="label">Password</label>
            <input id="password" onblur="pass_validate(this.value)" asp-for="Password" type="password" class="input" data-type="password">
            <div id="messageP"></div>
        </div>
        <div class="group">
            <label for="passwordC" class="label">Confirm Password</label>
            <input onblur="passC_validate(this.value)" id="passwordC" asp-for="PasswordConfirm" type="password" class="input" data-type="password">
            <div id="messagePC"></div>
        </div>

        <div class="group">
            <input type="submit" id="submBtn" onclick="form_validate()" class="button" value="Sign Up">
        </div>
        @*<div class="hr"></div>*@
        <div class="foot-lnk">
            <a for="tab-1">Already Member?</a>
        </div>
    </form>