@{
    Layout = "_Layout";
}
@model MyOwnApp.ViewModels.RegisterViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/css/styleReg.css" rel="stylesheet" />
</head>
<body>
    <div class="login-page">
        <div class="form">
            <!--<p class="message">Already registered? <a href="#">Sign In</a></p>-->
            <h4 class="card-title mt-3 text-center">Create Account</h4>
            <p class="text-center">Get started with your free account</p>
            <p>
                <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i>   Login via Twitter</a>
                <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i>   Login via facebook</a>
            </p>
            <p class="divider-text">
                <span>OR</span>
            </p>
            <div class="login">
                <form id="form" method="post" asp-action="Register" asp-controller="Account">
                    <div class="form-group">
                        <label for="firstName">First name</label>
                        <input onblur="FN_validate(this.value)" asp-for="FirstName" name="firstName" itemprop="addressRegion" type="text" class="form-control" id="firstName">
                        <div id="messageFN"></div>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last name</label>
                        <input onblur="LN_validate(this.value)" asp-for="LastName" name="lastName" itemprop="addressRegion" type="text" class="form-control" id="lastName">
                        <div id="messageLN"></div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input onblur="email_validate(this.value)" asp-for="Email" name="email" itemprop="email" type="email" class="form-control" id="email">
                        <div id="messageE"></div>
                    </div>
                    <div class="form-group ">
                        <label for="password">Password</label>
                        <div class="input-group">
                            <input onblur="pass_validate(this.value)" asp-for="Password" type="password" name="password" class="form-control" id="password">
                            <div class="input-group-append">
                                <button type="button" onclick="EyeClick()" id="eye"></button>
                            </div>
                        </div>
                        <div id="messageP"></div>
                    </div>
                    <div class="form-group ">
                        <label for="passwordC">Confirm password</label>
                        <input onblur="passC_validate(this.value)" type="password" asp-for="PasswordConfirm" name="passwordConfirm" class="form-control" id="passwordC">
                        <div id="messagePC"></div>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input onblur="address_validate(this.value)" asp-for="Address" name="address" itemprop="address" type="text" class="form-control" id="address" placeholder="1234 Main St">
                        <div id="messageA"></div>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input onblur="phone_validate(this.value)" asp-for="Phone" name="phone" itemprop="phone" type="text" class="form-control" id="phone" placeholder="123 456 7890">
                        <div id="messagePh"></div>
                    </div>


                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label onclick="check_validate()" class="form-check-label" for="gridCheck">
                                I accept the terms
                            </label>
                        </div>
                    </div>
                    <div>
                        <button type="submit" id="submBtn" onclick="form_validate()">Register</button>
                        <div id="messageBtn"></div>
                    </div>
                    <p class="message">Already registered? <a href="#">Sign In</a></p>
                </form>
            </div>

        </div>
    </div>
    <script src="~/js/validateRegister.js"></script>
</body>
</html>
