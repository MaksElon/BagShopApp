@model MyOwnApp.ViewModels.LoginViewModel
<form class="sign-in-htm" asp-controller="Account" asp-action="Login">
    <div class="group">
        <label for="emaiL" class="label">Email</label>
        <input asp-for="Email" id="emaiL" type="text" class="input">
    </div>
    <div class="group">
        <label for="pass" class="label">Password</label>
        <input id="pass" asp-for="Password" type="password" class="input" data-type="password">
    </div>
    <div class="group">
        <input id="check" type="checkbox" class="check" checked>
        <label for="check"><span class="icon"></span> Keep me Signed in</label>
    </div>
    <div class="group">
        <input type="submit" class="button" value="Sign In">
    </div>
    <div class="hr"></div>
    <div class="foot-lnk">
        <a href="#forgot">Forgot Password?</a>
    </div>
</form>
