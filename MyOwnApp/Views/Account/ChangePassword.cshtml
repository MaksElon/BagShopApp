
@{
    Layout = "_Layout";
}
@model MyOwnApp.ViewModels.ChangePasswordModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePassword</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link href="~/css/styleForgot.css" rel="stylesheet" />
</head>
<body>
    <div class="forgot-wrap">
        <div class="forgot-html">
            <label for="tab-1" class="tab"></label>
            <div class="forgot-form">
                <form asp-controller="Account" asp-action="ChangePassword">
                    <div class="group">
                        <label class="label">New Password</label>
                        <input asp-for="Password" type="password" class="input">
                    </div>
                    <div class="group">
                        <label class="label">Confirm Password</label>
                        <input asp-for="PasswordConfirm" type="password" class="input">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Send message">
                    </div>

                </form>


            </div>
        </div>
</div>
</body>
</html>
